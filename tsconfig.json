{
       "compilerOptions": {
              "allowSyntheticDefaultImports": true,
              "jsx": "react-jsx",
              "module": "ESNext",
              "target": "ES6",
              "moduleResolution": "node",
              "sourceMap": true,
              "esModuleInterop": true,
              "outDir": "dist",
              "inlineSources": true,
              "allowJs": true,
              "removeComments": true,
              "skipLibCheck": true,
              "declaration": true,
              
       },
       "include": [
              "src/**/*"
       ],
       "exclude": [
              "dist",
              "src/tests",
              "test",
              "node_modules"
       ]
}